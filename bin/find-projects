#!/usr/bin/env bash

dirs=(
  "$HOME/dotfiles"
  "$HOME/notes"
  "$HOME/personal"
  "$HOME/faculdade"
)

dirs+=$(find "${dirs[@]}" -mindepth 1 -maxdepth 1 -type d -not -path '*/.*')

dirs=$(echo "$dirs" | tr ' ' '\n')

selected=$(echo "$dirs" | fzf \
    --preview 'eza -1 --color=always --icons=auto {1}' \
    --preview-window=right:35%)

if [ -n "$selected" ]; then
  cd "$selected"
fi
