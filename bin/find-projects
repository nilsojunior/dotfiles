#!/usr/bin/env bash

dirs=(
  "$HOME/dotfiles"
  "$HOME/dotfiles/.config"
  "$HOME/notes"
  "$HOME/personal"
  "$HOME/faculdade"
)

dirs+=($(fd --type d --max-depth 1 --exclude '.git*' . "${dirs[@]}" --absolute-path))

dirs=$(printf "%s\n" "${dirs[@]}")

selected=$(echo "$dirs" | fzf \
    --preview 'eza -1 --color=always --icons=auto {1}' \
    --preview-window=right:35%)

if [[ "$TERM" == "xterm-kitty" ]]; then
    kitten @ launch --type overlay "$selected"
fi
