#!/usr/bin/env bash

# Running this from the wallpaper DIR will not work

CONFIG_FILE="$HOME/.config/hypr/hyprpaper.conf"
WALLPAPER_DIR="$HOME/pics/backgrounds"

WALLPAPERS=$(find "$WALLPAPER_DIR" -mindepth 1 | fzf --preview 'kitty icat --clear --transfer-mode=memory --stdin=no --place="${FZF_PREVIEW_COLUMNS}x${FZF_PREVIEW_LINES}@0x0" {} '
)

if [[ -n "$WALLPAPERS" ]]; then
    FILENAME="${WALLPAPERS##*/}"

    echo "preload = ~/pics/backgrounds/$FILENAME" > "$CONFIG_FILE"
    echo "wallpaper = , ~/pics/backgrounds/$FILENAME" >> "$CONFIG_FILE"

    killall hyprpaper
    hyprpaper &>/dev/null &
fi
